{
  "manifest_version": 3,

  "name": "YouTool",
  "description": "Extension for make your life easier",
  "version": "2.0",

  "icons": {
    "512": "favicon.png"
  },

  "action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/vendor.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"]
}
